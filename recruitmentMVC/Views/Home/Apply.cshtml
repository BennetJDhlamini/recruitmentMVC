@model AddApplicationViewModel

@{
    ViewBag.Title = "Apply";
}

<div class="card" style="background-color: #28A745;">
    <h1 class="text-center">Apply</h1>

    <form enctype="multipart/form-data" asp-controller="home" asp-action="apply" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Full name(s)">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Surname" class="form-control" placeholder="Surname">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Contact" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Contact" class="form-control" placeholder="Contact">
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Resume" class="col-sm-2 col-form-label">Resume/CV</label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Resume" class="form-control custom-file-input">
                    <label class="custom-file-label">Upload your resume</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ID" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="ID" class="form-control custom-file-input">
                    <label class="custom-file-label">Upload your ID</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Transcript" class="col-sm-2 col-form-label">Transcript</label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Transcript" class="form-control custom-file-input">
                    <label class="custom-file-label">Upload your transcript</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="matricCertificate" class="col-sm-2 col-form-label">Matric Certificate</label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="matricCertificate" class="form-control custom-file-input">
                    <label class="custom-file-label">Upload your matric certificate</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="relevantDocs" class="col-sm-2 col-form-label">Relevent Documents</label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input multiple asp-for="relevantDocs" class="form-control custom-file-input">
                    <label class="custom-file-label">Upload any other relevant documents</label>
                </div>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-success" style="border-color:white;color:black; width:auto">Apply</button>
                <a asp-action="index" asp-controller="home" class="btn btn-outline-success" style="border-color:white;color:black; width:auto">Cancel</a>
            </div>
        </div>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).next('.custom-file-label');
                        var files = $(this)[0].files;
                        if (files.length > 1) {
                            fileName.html(files.length + ' files selected');
                        }
                        else if (files.length == 1) {
                            fileName.html(files[0].name);
                        }
                    });
                });
            </script>
        }
    </form>
</div>

