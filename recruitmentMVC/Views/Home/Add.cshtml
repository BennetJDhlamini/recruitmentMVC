@model AddJobViewModel

@{
    ViewBag.Title = "Add Job";
}

<div class="card" style="background-color: #28A745;">
    <h1 class="text-center">Add Job</h1>

    <form enctype="multipart/form-data" asp-controller="home" asp-action="add" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Company Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Position" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Position" class="form-control" placeholder="Position">
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Location" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Location" class="form-control" placeholder="Location">
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Type" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Type" class="custom-select mr-sm-2"
                        asp-items="Html.GetEnumSelectList<Typ>()">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Salary" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Salary" class="form-control" placeholder="Salary">
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Department" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Department" class="custom-select mr-sm-2"
                        asp-items="Html.GetEnumSelectList<Department>()">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Qualification" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Qualification" class="form-control" placeholder="Qualifications">
                <span asp-validation-for="Qualification" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Skills" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Skills" class="form-control" placeholder="Skills"></textarea>
                <span asp-validation-for="Skills" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Experience" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Experience" class="form-control" placeholder="Experience">
                <span asp-validation-for="Experience" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="About" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="About" class="form-control" placeholder="About">
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="pDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="pDate" class="form-control" type="date" placeholder="Date Posted">
                <span asp-validation-for="pDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="cDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="cDate" class="form-control" type="date" placeholder="Closing Date">
                <span asp-validation-for="cDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label">Company logo</label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input" accept="image/*">
                    <label class="custom-file-label">Upload company's logo...</label>
                </div>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-success" style="border-color:white;color:black; width:auto">Add</button>
                <a asp-action="index" asp-controller="home" class="btn btn-outline-success" style="border-color:white;color:black; width:auto">Cancel</a>
            </div>
        </div>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </form>
    </div>

