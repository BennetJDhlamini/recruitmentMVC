@model UserClaimsViewModel


    <div class="card" style="background-color: #28A745;">
        <form method="post">
            <div style="background-color:transparent;" class="card">
                <div style="background-color:white;" class="card-header">
                    <h2>Manage User Claims</h2>
                </div>
                <div style="background-color:transparent;" class="card-body">
                    @for (int i = 0; i < Model.Cliams.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model.Cliams[i].ClaimType" />
                            <input asp-for="@Model.Cliams[i].IsSelected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model.Cliams[i].IsSelected">
                                @Model.Cliams[i].ClaimType
                            </label>
                        </div>
                    }
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div style="background-color:white;" class="card-footer">
                    <input type="submit" value="Update" class="btn btn-success"
                           style=" border-color:white;color:black; width:auto" />
                    <a asp-action="EditUser" asp-route-id="@Model.UserId"
                       class="btn btn-success" style=" border-color:white;color:black; width:auto">Cancel</a>
                </div>
            </div>
        </form>
    </div>
