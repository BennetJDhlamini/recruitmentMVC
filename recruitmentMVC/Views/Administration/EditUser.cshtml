@model EditUserViewModel
@inject IAuthorizationService authorizationService;

@{
    ViewBag.Title = "Edit User";
}

<div class="card" style="background-color: #28A745;">
    <h1>Edit User</h1>

    <form method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserName" class="form-control">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Gender" class="custom-select mr-sm-2"
                        asp-items="Html.GetEnumSelectList<Gen>()">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-success" style="border-color:white;color:black; width:auto" title="Update">Update</button>
                <a asp-action="ListUsers" class="btn btn-outline-success" style="border-color: white; color: black; width: auto" title="Cancel">Cancel</a>
            </div>
        </div>

        <div style="background-color:transparent;" class="card">
            <div style="background-color:white;" class="card-header">
                <h3>User Roles</h3>
            </div>
            <div style="background-color:transparent;" class="card-body">
                @if (Model.Roles.Any())
                {
                    foreach (var role in Model.Roles.ToList())
                    {
                        <h5 class="card-title">@role</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
             @if ((await authorizationService.AuthorizeAsync(User, "AdminRolePolicy")).Succeeded)
              {
                 <div style="background-color:white;" class="card-footer">
                    <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id"
                      class="btn btn-success" style="border-color: white; color: black; width: auto" title="Manage Roles">
                      Manage Roles
                    </a>
                 </div>
              }
        </div>

        <div style="background-color:transparent;" class="card mt-3">
            <div style="background-color:white;" class="card-header">
                <h3>User Claims</h3>
            </div>
            <div style="background-color:transparent;" class="card-body">
                @if (Model.Claims.Any())
                {
                    foreach (var claim in Model.Claims)
                    {
                        <h5 class="card-title">@claim</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>
             @if ((await authorizationService.AuthorizeAsync(User, "AdminRolePolicy")).Succeeded)
              {
                    <div style="background-color:white;" class="card-footer">
                       <a asp-action="ManageUserClaims" asp-route-userId="@Model.Id"
                          class="btn btn-success" style="border-color: white; color: black; width: auto" title="Manage Claims">
                          Manage Claims
                       </a>
                    </div>
              }
        </div>
    </form>
</div>