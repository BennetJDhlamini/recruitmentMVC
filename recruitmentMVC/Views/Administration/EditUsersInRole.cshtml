@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}
<div class="card" style="background-color: #28A745;">
    <form method="post">
        <div style="background-color:transparent;" class="card">
            <div class="card-header" style="background-color:white;">
                <h2>Add or remove users from this role</h2>
            </div>
            <div style="background-color:transparent;" class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].UserName
                        </label>
                    </div>
                }
            </div>
            <div style="background-color:white;" class="card-footer">
                <input type="submit" value="Update" class="btn btn-success"
                       style="width:auto" />
                <a asp-action="EditRole" asp-route-id="@roleId"
                   class="btn btn-success" title="Cancel" style="width:auto">Cancel</a>
            </div>
        </div>
    </form>
</div>