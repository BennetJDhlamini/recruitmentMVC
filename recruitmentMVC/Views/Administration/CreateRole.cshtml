@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<div class="card" style="background-color: #28A745;">
    <h1 class="text-center">Create new role</h1>
    <form asp-action="CreateRole" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" placeholder="Name">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div style="background-color:transparent;" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success" style="border-color:white; color:black; width:auto" title="Create Role">
                    Create Role
                </button>
                <a asp-controller="home" asp-action="Index" style="border-color:white; color: black; width: auto" class="btn btn-success m-1">Back</a>
            </div>
        </div>
    </form>
</div>